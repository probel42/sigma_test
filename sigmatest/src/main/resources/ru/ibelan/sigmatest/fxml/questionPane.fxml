<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane styleClass="mainPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
			fx:controller="ru.ibelan.sigmatest.controllers.QuestionPaneController">
	<children>
		<Label fx:id="questionLabel" alignment="CENTER" layoutX="50.0" layoutY="50.0" prefHeight="140.0"
			   prefWidth="700.0"/>
		<Button fx:id="yesButton" layoutX="130.0" layoutY="250.0" onAction="#onClickYes" prefHeight="50.0"
				prefWidth="180.0" disable="true" text="Да"/>
		<Button fx:id="noButton" layoutX="490.0" layoutY="250.0" onAction="#onClickNo" prefHeight="50.0"
				prefWidth="180.0" disable="true" text="Нет"/>
	</children>
</AnchorPane>
